---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  label: string
  icon?: {
    component: any
    position?: 'leading' | 'trailing'
  }
}

const { label, icon, ...attrs } = Astro.props
const { component: Icon, position = 'trailing' } = icon ?? {}

---

<a
  class:list={[
    'min-w-max inline-flex items-center justify-center gap-2 text-sm text-blue-600 font-medium hover:(text-blue-500 underline underline-offset-5) focus-visible:(outline-none ring)',
    { 'flex-row-reverse': position === 'leading' },
  ]}
  {...attrs}
>
  { label }
  { Icon && <Icon class="-mx-1" aria-hidden="true" /> }
</a>
